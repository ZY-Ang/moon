{
    "version" : "2017-02-28",
    "operation" : "UpdateItem",
    "key" : {
        "id": $util.dynamodb.toDynamoDBJson($util.autoId())
    },
    "update" : {
        "expression" : "SET #email = :email, #url = :url, #content = :content",
        "expressionNames" : {
           "#email": "email",
           "#url" : "url",
           "#content": "content"
        },
        "expressionValues" : {
            ":email": $util.dynamodb.toDynamoDBJson($ctx.identity.claims.email),
            ":url" : $util.dynamodb.toDynamoDBJson($ctx.args.input.url),
            ":content": $util.dynamodb.toDynamoDBJson($ctx.args.input.content)
        }
    }
}