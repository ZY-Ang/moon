{
  "manifest_version": 2,

  "name": "Moon",
  "short_name": "Moon",
  "description": "Shop and pay with crypto at the lowest rates. Works on Amazon.com and many more!",
  "version": "0.1.0",
  "homepage_url": "https://paywithmoon.com/",

  "icons": {
    "16": "logo_128.png",
    "32": "logo_128.png",
    "128": "logo_128.png"
  },

  "web_accessible_resources":[
    "/*"
  ],

  "permissions": [
    "storage",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*",
    "activeTab",
    "tabs"
  ],

  "browser_action": {
    "default_title": "Moon"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["app.js"]
    }
  ]
}
