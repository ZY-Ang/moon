{
  "manifest_version": 2,

  "name": "Moon",
  "short_name": "Moon",
  "description": "Shop and pay with crypto at the lowest rates. Works on Amazon.com and many more!",
  "version": "0.1.0",
  "homepage_url": "https://paywithmoon.com/",

  "icons": {
    "16": "assets/icons/logo_128.png",
    "32": "assets/icons/logo_128.png",
    "128": "assets/icons/logo_128.png"
  },

  "web_accessible_resources":[
    "/*"
  ],

  "permissions": [
    "activeTab",
    "tabs"
  ],

  "browser_action": {
    "default_icon": {
      "24": "assets/icons/logo_disabled_128.png",
      "32": "assets/icons/logo_disabled_128.png"
    },
    "default_title": "Moon"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["app.css"],
      "js": ["app.js"]
    }
  ]
}
