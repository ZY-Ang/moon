{
  "name": "Moon",
  "version": "0.1.0",
  "description": "Shop and pay with crypto at the lowest rates. Works on Amazon.com and many more!",
  "main": "src/app/index.js",
  "scripts": {
    "build": "del /q build\\* && npm run build-src-app && npm run build-src-background && npm run build-assets && npm run build-manifest",
    "build-src-app": "parcel build src/app/index.js -d build/ -o app.js",
    "build-src-background": "parcel build src/background/index.js -d build/ -o background.js",
    "build-assets": "copy /Y ..\\assets\\icons\\logo_128.png build\\logo_128.png",
    "build-manifest": "copy /Y manifest.json build\\manifest.json",
    "watch-src-app": "parcel watch src/app/index.js -d build/ -o app.js",
    "watch-src-background": "parcel watch src/background/index.js -d build/ -o background.js"
  },
  "author": "Moon",
  "respository": {
    "type": "git",
    "url": "https://github.com/paywithmoon/moon.git"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "parcel-bundler": "^1.6.2"
  }
}
